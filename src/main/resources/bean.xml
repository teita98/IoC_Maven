<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">

    <bean id="jeringa" class="org.app.ioc.Jeringa" />
    <bean id="bisturi" class="org.app.ioc.Bisturi" />
    <bean id="opera" class="org.app.ioc.Medico">

        <!-- con la IoC, solo hay qeu cambiar la referencia para que nos cambie el "utensilio en este caso" qeu estamos usando -->
        <!-- <property name="utensilio" ref="jeringa"/> Inyectando jeringa IoC -->
        <property name="utensilio" ref="bisturi"/> <!-- Inyectando bisturi IoC -->
    </bean>

</beans>